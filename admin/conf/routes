# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                 @controllers.Application.index

#category  zhb
GET         /category                         @controllers.category.CategoryController.findFatherCategorys()
POST        /category/add                     @controllers.category.CategoryController.addFirst()

#property
GET         /property            @controllers.category.PropertyValueController.propertyIndex()
POST        /property/add        @controllers.category.PropertyValueController.createProperty()
POST        /property/delete     @controllers.category.PropertyValueController.deleteProperty()

#designer lidujun
GET         /designerlist            @controllers.designer.DesignerController.designerlist
GET         /designerForm            @controllers.designer.DesignerController.designerForm
POST        /addDesigner             @controllers.designer.DesignerController.addDesigner
GET         /showDesigner            @controllers.designer.DesignerController.showDesigner(designerId:Int ?= 0)
GET         /editDesignerForm        @controllers.designer.DesignerController.editDesignerForm(designerId:Int ?= 0)
POST        /editDesigner            @controllers.designer.DesignerController.editDesigner
GET         /falseDeleteDesigner     @controllers.designer.DesignerController.falseDeleteDesigner(designerId:Int ?= 0)



# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                     controllers.Assets.at(path="/public", file)


#testObject
GET         /test/objects                     @controllers.test.TestObjectController.list(status ?= null, orderNo ?= null)
GET         /test/objects/add                 @controllers.test.TestObjectController.addPage()
POST        /test/objects/save                @controllers.test.TestObjectController.saveTestObject()
GET         /test/objects/:id/update          @controllers.test.TestObjectController.updatePage(id: Int)
POST        /test/objects/save_by_json        @controllers.test.TestObjectController.createByJson()
GET         /test/objects/:id/json            @controllers.test.TestObjectController.viewByJson(id: Integer)

#testCache
GET         /cache/:key                       @controllers.test.CacheController.getCache(key)
PUT         /cache/:key                       @controllers.test.CacheController.setCache(key, value)
