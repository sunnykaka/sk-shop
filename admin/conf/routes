# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    @controllers.Application.index


#Order
GET         /orders              @controllers.order.OrderController.list(status ?= null, orderNo ?= null)
GET         /orders/new          @controllers.order.OrderController.addPage()
POST        /orders/new          @controllers.order.OrderController.saveOrder()


#Cache
GET         /cache/:key          @controllers.test.CacheController.getCache(key)
PUT         /cache/:key          @controllers.test.CacheController.setCache(key, value)

#category  zhb
GET         /category            @controllers.category.CategoryController.findFatherCategorys()
POST        /category/add        @controllers.category.CategoryController.addFirst()

#property
GET         /property            @controllers.category.PropertyValueController.propertyIndex()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)



#designer lidujun
GET         /designerlist            @controllers.designer.DesignerController.designerlist
GET         /designerForm            @controllers.designer.DesignerController.designerForm
POST        /addDesigner             @controllers.designer.DesignerController.addDesigner
GET         /showDesigner            @controllers.designer.DesignerController.showDesigner(designerId:Int ?= 0)
GET         /editDesignerForm        @controllers.designer.DesignerController.editDesignerForm(designerId:Int ?= 0)
POST        /editDesigner            @controllers.designer.DesignerController.editDesigner
GET         /falseDeleteDesigner     @controllers.designer.DesignerController.falseDeleteDesigner(designerId:Int ?= 0)
